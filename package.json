{
  "name": "backend",
  "private": true,
  "version": "0.0.1",
  "main": "server.js",
  "dependencies": {
    "@tsconfig/node18": "18.2.2",
    "@types/cookie-parser": "1.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.11.19",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "knex": "3.1.0",
    "knex-paginate": "3.1.1",
    "pg": "8.11.3",
    "typescript": "5.3.3",
    "zod": "3.22.4",
    "zod-validation-error": "3.0.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.0.2",
    "dotenv": "16.4.5",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "jest-fetch-mock": "3.0.3",
    "nodemon": "3.0.3",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2"
  },
  "scripts": {
    "clean:build": "rm -rf dist",
    "clean:packages": "rm -rf node_modules",
    "clean:all": "rm -rf node_modules dist",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "NODE_PATH=dist NODE_ENV=production node dist/server.js",
    "start:dev": "yarn database:start && NODE_PATH=src nodemon --watch src -e ts --exec ts-node -r dotenv/config src/server.ts",
    "database:start": "docker run --name rdga_db --rm -d -p 5432:5432 -e POSTGRES_USER=rdga_dev -e POSTGRES_PASSWORD=java_script_i_love_it -e POSTGRES_DB=rdga_dev_db postgres:16-alpine",
    "database:stop": "docker stop rdga_db",
    "migration:make": "npx knex migrate:make --migrations-directory=src/database/migrations -x ts",
    "migrate:latest": "npx knex migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:up": "npx knex migrate:up --knexfile database/knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile src/database/knexfile.ts",
    "migrate:rollback": "npx knex migrate:rollback --knexfile src/database/knexfile.ts",
    "migrate:latest:production": "npx knex migrate:latest --knexfile dist/database/knexfile.js --env production",
    "seed:make": "knex seed:make -x ts",
    "seed:run": "knex seed:run --knexfile src/database/knexfile.ts",
    "eslint:check": "eslint . --ext .ts",
    "types:check": "tsc --noEmit",
    "test": "TZ=UTC jest --runInBand --forceExit --detectOpenHandles",
    "test:coverage": "TZ=UTC jest --coverage --runInBand --forceExit --detectOpenHandles"
  }
}
