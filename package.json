{
  "name": "backend",
  "private": true,
  "version": "0.0.1",
  "main": "server.js",
  "dependencies": {
    "@tsconfig/node18": "1.0.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/node": "18.15.3",
    "cors": "2.8.5",
    "express": "4.18.2",
    "joi": "17.8.4",
    "knex": "2.4.2",
    "knex-paginate": "3.0.2",
    "pg": "8.10.0",
    "typescript": "5.0.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "dotenv": "16.0.3",
    "eslint": "8.36.0",
    "jest": "29.5.0",
    "nodemon": "2.0.21",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1"
  },
  "scripts": {
    "clean:build": "rm -rf dist",
    "clean:packages": "rm -rf node_modules",
    "clean:all": "rm -rf node_modules dist",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "NODE_PATH=dist NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_PATH=src nodemon --watch src -e ts --exec ts-node -r dotenv/config src/server.ts",
    "start:dev:database": "docker run --name rdga_db --rm -d -p 5432:5432 -e POSTGRES_USER=rdga_dev -e POSTGRES_PASSWORD=java_script_i_love_it -e POSTGRES_DB=rdga_dev_db postgres:14.2",
    "stop:dev:database": "docker stop rdga_db",
    "migration:make": "npx knex migrate:make --migrations-directory=src/database/migrations -x ts",
    "migrate:latest": "npx knex migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:up": "npx knex migrate:up --knexfile database/knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile src/database/knexfile.ts",
    "migrate:rollback": "npx knex migrate:rollback --knexfile src/database/knexfile.ts",
    "migrate:latest:production": "npx knex migrate:latest --knexfile dist/database/knexfile.js --env production",
    "seed:make": "knex seed:make -x ts",
    "seed:run": "knex seed:run --knexfile src/database/knexfile.ts",
    "lint": "eslint . --ext .ts",
    "types:check": "tsc --noEmit",
    "test": "TZ=UTC jest --runInBand --forceExit --detectOpenHandles",
    "test:coverage": "TZ=UTC jest --coverage --runInBand --forceExit --detectOpenHandles"
  }
}
